<div class= "container">
  <div class= "row">
    <div class= "col-md-3">
    <%= render 'users/info', user: @user %>
    <%= render 'books/new', book: @new_book %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <div>
        <h2>Book detail</h2>
        <table>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image(80,80) %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <% if @user == current_user %>
      <td>
        <%= link_to "Edit", edit_book_path(@book)%>
      </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      <% end %>
    </div>
  </div>
</div>